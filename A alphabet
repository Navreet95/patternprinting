#include <iostream>
using namespace std;
int main() {
    int size = 6;
    for (int i=0;i<size;i++)
    {
      for (int j=0;j<size-i;j++)
      {
          cout <<" ";
      }
      if (i==size/2)
          {
              for (int j=0;j<size+1;j++)
      {
          cout <<"*";
      }
        }
      for (int j=0;j<=0;j++)
      {
          cout <<"*";
         
      }
      
       for (int j=0;j<i*2;j++)
      {
          cout <<" ";
         
      }
      for (int j=0;j<=0;j++)
      {
          if(i==size/2)
          continue;
          else
          cout <<"*";
      }
      cout<<endl;
    }
      
    return 0;
}
